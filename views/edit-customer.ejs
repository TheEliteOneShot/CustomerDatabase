<% include partials/header.ejs %>

<div class="container">

    <% if (customers) { %>
    <form class="add-customers-form" action="/edit/<%= customers.id %>" method="post">
        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="id">ID</label>
                <input type="text" class="form-control" name="id" id="id" value="<%= customers.id %>" required disabled
                    title="User ID cannot be changed.">
            </div>
            <div class="form-group col-md-4">
                <label for="user_email">Email Address</label>
                <input type="text" class="form-control" name="user_email" id="user_email" value="<%= customers.email %>"
                    required>
            </div>
            <div class="form-group col-md-4">
                <label for="first_name">First Name</label>
                <input type="text" class="form-control" name="first_name" id="first_name"
                    value="<%= customers.first_name %>" required>
            </div>
            <div class="form-group col-md-4">
                <label for="last_name">Last Name</label>
                <input type="text" class="form-control" name="last_name" id="last_name"
                    value="<%= customers.last_name %>" required>
            </div>
            <div class="form-group col-md-4">
                <label for="ip">I.P. Address</label>
                <input type="text" class="form-control" name="ip" id="ip" value="<%= customers.ip %>" required>
            </div>
            <div class="form-group col-md-4">
                <label for="latitude">Latitude</label>
                <input type="text" class="form-control" name="latitude" id="latitude" value="<%= customers.latitude %>"
                    required>
            </div>
            <div class="form-group col-md-4">
                <label for="longitude">Longitude</label>
                <input type="text" class="form-control" name="longitude" id="longitude"
                    value="<%= customers.longitude %>" required>
            </div>
            <div class="form-group col-md-4">
                <label for="created_at">Creation Date</label>
                <input type="text" class="form-control" name="created_at" id="created_at" value="<%= customers.created_at %>" required disabled
                title="User creation date cannot be changed.">
            </div>
        </div>
        <button type="submit" formmethod="post" class="btn btn-success float-right">Update this customer</button>
    </div>
    </form>
    <% } %>
</div>
</body>

</html>

